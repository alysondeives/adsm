/**
 * \file gmac/static
 *
 * GMAC C++ static objects implementation
 */

#ifndef GMAC_STATIC_CPP_H_
#define GMAC_STATIC_CPP_H_

#ifndef __cplusplus
#error "This header can only be included in C++ programs"
#endif

template <typename T>
class static_var {
protected:
    T *t_;

public:
    static_var()
    {
        t_ = new (allocator) T;
    }

    static_var(T &t)
    {
        t_ = new (allocator) T;
        *t_ = t;
    }

    ~static_var()
    {
        free(t_);
    }

    T *operator&()
    {
        return t_;
    }

    const T *operator&() const
    {
        return t_;
    }
};

template <typename T>
class static_array :
    public static_var<T> {

public:
    static_array(unsigned elems)
    {
        this->t_ = new (allocator) T[elems];
    }

    virtual ~static_array()
    {
    }

    T &operator[](unsigned index)
    {
        return this->t_[index];
    }

    const T &operator[](unsigned index) const
    {
        return this->t_[index];
    }
};

#endif /* GMAC_STATIC_CPP_H_ */

